<style>
  .product-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 16px;
    padding: 20px;
  }
  .product-card {
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 10px;
    padding: 16px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  }
  .product-card h2 {
    font-size: 1.2rem;
    margin-bottom: 8px;
    color: #333;
  }
  .product-card h3 {
    font-size: 1rem;
    margin-bottom: 4px;
    color: #666;
  }
  .product-card h4 {
    color: #2e7d32;
    font-weight: bold;
  }
  .no-products {
    text-align: center;
    font-size: 1.2rem;
    color: #888;
    margin-top: 40px;
  }
</style>

{{#if products.length}}
  <h1 style="text-align:center; font-size: 24px; margin-top: 20px;">Hay productos cargados</h1>

  <div class="product-container">
    {{#each products}}
      <div class="product-card">
        <h2>{{this.name}}</h2>
        <h3>{{this.description}}</h3>
        <h4>${{this.price}}</h4>
      </div>
    {{/each}}
  </div>
{{else}}
  <p class="no-products">No hay productos cargados</p>
{{/if}}
