<div>
    {{#if nextLink}}
    <a href="{{nextLink}}">Siguiente pestaña</a>
    {{/if}}
    {{#if prevLink}}
    <a href="{{prevLink}}">Pestaña previa</a>
    {{/if}}

    <div>
        {{#each products}}
        <div id="product-{{this._id}}">
            <div>
                <p>{{this.code}}</p>
                <h2>{{this.title}}</h2>
                <p>{{this.description}}</p>
                <p>{{this.price}}</p>

                <div>
                    {{#if this.stock}}
                    <button onclick="addProductToCart('{{{this._id}}}')">Agregar al carrito</button>
                    <div>{{this.stock}} disponibles</div>
                    {{else}}
                    <div>Sin Stock</div>
                    {{/if}}

                    <a href="/products/{{this._id}}" id="add-{{this._id}}">Ver detalle</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<style>
    h1, h2, h3 {
        color: #333;
        margin-top: 0;
    }
    label {
        font-weight: bold;
        display: block;
        margin-bottom: 0.5rem;
    }
    input, select, textarea {
        width: 100%;
        padding: 0.5rem;
        margin-bottom: 1rem;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }
    button, .btn {
        background: #28a745;
        color: #fff;
        border: none;
        padding: 0.7rem 1.5rem;
        border-radius: 4px;
        cursor: pointer;
        font-size: 1rem;
        font-weight: bold;
        transition: background 0.2s;
    }
    button:hover, .btn:hover {
        background: #218838;
    }
    .card {
        background: #fafafa;
        border: 1px solid #e0e0e0;
        border-radius: 6px;
        padding: 1rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 1px 4px rgba(0,0,0,0.04);
    }
    .flex-row {
        display: flex;
        gap: 1rem;
        align-items: center;
    }
    .center {
        text-align: center;
    }
</style>
