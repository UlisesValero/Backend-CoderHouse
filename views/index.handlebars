    background: #007bff;
    color: #fff;
    padding: 0.5rem 1.2rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: bold;
    transition: background 0.2s;
}
.btn-pagination:hover {
    background: #0056b3;
}
.products-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 2rem;
}
.product-card {
    background: #fff;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    padding: 1.5rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.06);
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}
.product-title {
    color: #007bff;
    margin: 0.5rem 0 0.2rem 0;
}
.product-code {
    color: #555;
    font-size: 0.95rem;
}
.product-desc {
    color: #444;
    font-size: 1rem;
}
.product-price {
    color: #28a745;
    font-weight: bold;
    font-size: 1.1rem;
}
.product-stock {
    color: #333;
    font-size: 0.95rem;
    margin-left: 1rem;
}
.product-stock.out {
    color: #dc3545;
    font-weight: bold;
