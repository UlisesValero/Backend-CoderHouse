<div>
    <div class="pagination">
        {{#if prevLink}}
        <a class="btn-pagination" href="{{prevLink}}">⟵ Pestaña previa</a>
        {{/if}}
        {{#if nextLink}}
        <a class="btn-pagination" href="{{nextLink}}">Siguiente pestaña ⟶</a>
        {{/if}}
    </div>

    <div class="products-list">
        {{#each products}}
        <div class="card product-card" id="product-{{this._id}}">
            <div>
                <p class="product-code"><strong>Código:</strong> {{this.code}}</p>
                <h2 class="product-title">{{this.title}}</h2>
                <p class="product-desc">{{this.description}}</p>
                <p class="product-price"><strong>Precio:</strong> ${{this.price}}</p>

                <div class="flex-row">
                    {{#if this.stock}}
                    <button onclick="addProductToCart('{{{this._id}}}')" class="btn">Agregar al carrito</button>
                    <div class="product-stock">{{this.stock}} disponibles</div>
                    {{else}}
                    <div class="product-stock out">Sin Stock</div>
                    {{/if}}

                    <a class="btn-detail" href="/products/{{this._id}}">Ver detalle</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<style>
body {
    background: #f4f4f4;
}
.pagination {
    display: flex;
    justify-content: flex-end;
    gap: 1rem;
    margin-bottom: 2rem;
}
