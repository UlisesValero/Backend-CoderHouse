.btn-detail {
    background: #ffc107;
    color: #333;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: bold;
    margin-left: 1rem;
    transition: background 0.2s;
}
.btn-detail:hover {
    background: #e0a800;
