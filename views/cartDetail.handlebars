<div class="cart-container">
    <div class="cart-header">
        <h2>Tu carrito</h2>
        <button id="vaciar-carrito-btn" onclick="deleteCart()">Vaciar carrito</button>
    </div>
    <div>
        {{#each cart.products}}
        <div class="cart-product" id="cart-product-{{this.product._id}}">
            <span>Cantidad: {{this.quantity}}</span>
            <div>
                <p><strong>Código:</strong> {{this.product.code}}</p>
                <button onclick="deleteFromCart('{{this.product._id}}')">Eliminar de carrito</button>
            </div>
            <h2>{{this.product.title}}</h2>
            <p><strong>Descripción:</strong> {{this.product.description}}</p>
            <p><strong>Precio:</strong> ${{this.product.price}}</p>
            <p><strong>Categoría:</strong> {{this.product.category}}</p>
            <p><strong>Stock:</strong> {{this.product.stock}}</p>
        </div>
        {{/each}}
    </div>
</div>
